rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    function isTeacher() {
      return hasRole('teacher');
    }

    function isValidFileSize(maxSizeMB) {
      return request.resource.size < maxSizeMB * 1024 * 1024;
    }

    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }

    function isValidMediaType() {
      return request.resource.contentType.matches('(image|video|audio)/.*');
    }

    // Media uploads for programs
    match /media/programs/{programId}/{fileName} {
      // Read: Public read for media playback (cover images accessible to all app users)
      // Security through obscurity: program IDs are random/unpredictable
      allow read: if true;

      // Write: Only teachers and admins can upload
      allow write: if (isTeacher() || isAdmin()) && isValidMediaType() && isValidFileSize(100);

      // Delete: Admin only
      allow delete: if isAdmin();
    }

    // Media uploads for lessons (with transcoding support)
    // Path structure: media/lessons/{lessonId}/original/{fileName}
    //                 media/lessons/{lessonId}/video/{quality}.mp4
    //                 media/lessons/{lessonId}/audio/{quality}.m4a
    //                 media/lessons/{lessonId}/thumb.jpg
    match /media/lessons/{lessonId}/{allPaths=**} {
      // Read: Public read for media playback (accessible to anyone with the link)
      // Security through obscurity: lesson IDs are random/unpredictable
      // Similar model to YouTube, Spotify, SoundCloud - content is "unlisted"
      allow read: if true;

      // Write: Teachers and admins can upload (2GB max for original)
      allow write: if (isTeacher() || isAdmin()) && isValidMediaType() && isValidFileSize(2048);

      // Delete: Admin only (to prevent accidental deletion)
      allow delete: if isAdmin();
    }

    // User profile images
    match /media/users/{userId}/{fileName} {
      allow read: if true; // Public read for profile images
      allow write: if isAuthenticated() && request.auth.uid == userId && isValidImageType() && isValidFileSize(5);
      allow delete: if isAdmin() || request.auth.uid == userId;
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
